<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/quienSoy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quien soy"
            android:icon="@drawable/ic_baseline_person_24"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/queEstudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Que estudio"
            android:icon="@drawable/ic_baseline_connect_without_contact_24"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tecNologias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tecnologias"
            android:icon="@drawable/ic_baseline_android_24"/>
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>
</LinearLayout>